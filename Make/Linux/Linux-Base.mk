#!/usr/bin/make

help-Linux: #Help: Help Linux
	@$(MAKE) help.Linux
################################################################################
# 👉                    📁 Работа с папками                                👈 #
################################################################################
chmod: #Linux: chmod
	@sudo chmod -R 777 ./
	@sudo chown -R vscode: ./
################################################################################
# 👉                     📁 Вывод папками                                 👈 #
###############################################################################
ll: #Linux: ls -al ~/
	@ls -ld ~/
	@ls -al ~/
################################################################################
# 👉                    		 All                                      👈 #
###############################################################################
user-name: #Linux: Имя пользователя
	@echo "📒 id -u: $(shell (id -u))"
	@echo "📒 whoami: $(shell (whoami))"
	@echo "📒 Групы: $(shell (groups))"